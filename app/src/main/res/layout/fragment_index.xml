<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#48baef"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/kaiguan_img"
            android:layout_marginLeft="5dp"
            android:layout_width="25dp"
            android:src="@mipmap/ic_launcher"
            android:layout_height="25dp" />
        <TextView
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="系统主界面"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
        <ImageView
            android:id="@+id/shuaxin_img"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <Button
            android:id="@+id/chongxi_btn"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_width="80dp"
            android:text="冲洗"
            android:background="@drawable/buttonstyle"
            android:layout_height="40dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:id="@+id/zhishui_img"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_below="@id/zhishui_img"
                        android:text="机器制水"
                        android:layout_alignRight="@id/zhishui_img"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:id="@+id/shuiman_img"
                        android:src="@mipmap/ic_launcher"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_below="@id/shuiman_img"
                        android:text="机器水满"
                        android:layout_alignRight="@id/shuiman_img"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:id="@+id/queshui_img"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" />
                    <TextView
                        android:text="机器缺水"
                        android:textColor="#000000"
                        android:layout_below="@id/queshui_img"
                        android:layout_alignLeft="@id/queshui_img"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp">
                    <ImageView
                        android:id="@+id/jiqiOk_img"
                        android:src="@mipmap/ic_launcher"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" />
                    <TextView
                        android:text="机器正常"
                        android:textColor="#000000"
                        android:layout_below="@id/jiqiOk_img"
                        android:layout_alignRight="@id/jiqiOk_img"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp">
                    <ImageView
                        android:id="@+id/guzhang_img"
                        android:src="@mipmap/ic_launcher"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" />
                    <TextView
                        android:text="机器故障"
                        android:textColor="#000000"
                        android:layout_below="@id/guzhang_img"
                        android:layout_alignRight="@id/guzhang_img"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp">
                    <ImageView
                        android:id="@+id/yichang_img"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" />
                    <TextView
                        android:text="机器异常"
                        android:textColor="#000000"
                        android:layout_below="@id/yichang_img"
                        android:layout_alignLeft="@id/yichang_img"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>