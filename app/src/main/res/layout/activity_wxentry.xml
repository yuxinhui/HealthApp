<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/popup_jiqipeizhi_ll"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="分享"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_marginStart="13dp"
                android:onClick="shareWXSceneTimeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/wxpengyou_img"
                    android:src="@mipmap/wechat_pengyou"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_below="@id/wxpengyou_img"
                    android:layout_centerHorizontal="true"
                    android:text="朋友圈"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:onClick="shareWXSceneSession"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/wxhaoyou_img"
                    android:src="@mipmap/wechat_haoyou"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_below="@id/wxhaoyou_img"
                    android:layout_centerHorizontal="true"
                    android:text="微信好友"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>